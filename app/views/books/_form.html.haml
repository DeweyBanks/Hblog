= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
    %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
    %ul
      - @book.errors.full_messages.each do |message|
        %li= message

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :user
    = f.collection_select :user_id, User.all, :id, :full_name, :prompt => 'Select One'

  .actions
    = f.submit 'Save'


